{
  "manifest_version": 3,
  "name": "inflearn-autoplayer",
  "version": "1.0.0",
  "description": "Plays videos in a row (continuously) for Korean dev lecture site \"Inflearn\".Icon created by Smashicons - Flaticon",
  "icons": {
    "128": "images/128.png"
  },
  "author": "joey110951@gmail.com",
  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["https://www.inflearn.com/*"],
  "commands": {
    "_execute_action": {
      "suggested_key": {}
    }
  }
}
